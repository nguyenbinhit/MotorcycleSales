
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<WebXe.Models.CartItemModel>

@section scripts{
    <script src="~/Assets/Client/js/Controller/CartController.js"></script>
}


<!-- horizontal image banner -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Assets/Client/banner/banner3.jpg" alt="banner3">
        </div>

        <div class="item">
            <img src="~/Assets/Client/banner/banner2.jpg" alt="banner2">
        </div>

        <div class="item">
            <img src="~/Assets/Client/banner/banner4.jpg" alt="banner4">
        </div>

        <div class="item">
            <img src="~/Assets/Client/banner/banner1.png" alt="banner1">
        </div>

        <div class="item">
            <img src="~/Assets/Client/banner/banner7.jpg" alt="banner7">
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true" style="color: #ffffff"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="color: #ffffff"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Cart -->
<div class="bg-1" style="background-color: #ffffff">
    <div class="container" style="padding: 0px 0px">
        <div class="row">
            <h3 class="text-center cart-h3" style="color: red;"> GIỎ HÀNG </h3>
            <p class="cart-p-img"><img src="~/Assets/Client/images/moto/di.png" alt="crossbar"></p>
        </div>
    </div>
</div>

<!-- List Cart -->
<div id="wrapper">
    <div id="maincontent">
        <div class="container" style="padding: 0px 0px">
            <div class="col-md-12 cart-12">
                @if (Model.Count > 0)
                {
                    <section class="box-main1">
                        <table class="table table-hover" id="shoppingcart_info">
                            <thead>
                                <tr>
                                    <th class="cart-th">Mã SP</th>
                                    <th class="cart-th">Tên sản phẩm</th>
                                    <th class="cart-th">Hình ảnh</th>
                                    <th class="cart-th" style="width: 15%">Số lượng</th>
                                    <th class="cart-th">Giá</th>
                                    <th class="cart-th">Tổng tiền</th>
                                    <th class="cart-th"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="font-size: 11pt;padding-top: 30px;">@item.Product.id</td>
                                        <td style="font-size: 11pt;padding-top: 30px;">@item.Product.name</td>
                                        <td>
                                            <img src="@item.Product.imagemain" width="95" height="60" />
                                        </td>
                                        <td>
                                            <input type="number" value="@item.Qty" class="form-control txtqty" id="qty" data-id="@item.Product.id" min="0" style="width: 45%;margin-top: 10px">
                                        </td>
                                        <td style="padding-top: 30px;">
                                            @if (item.Product.sale > 0)
                                            {
                                                @item.Product.sale
                                            }
                                            else
                                            {
                                                @item.Product.price.ToString("N0")
                                            }
                                        </td>
                                        <td style="padding-top: 30px;">
                                            @if (item.Product.sale > 0)
                                            {
                                                @(item.Product.sale * item.Qty)
                                            }
                                            else
                                            {
                                                @((item.Product.price * item.Qty).ToString("N0"))
                                            }
                                        </td>
                                        <td style="padding-top: 30px;">
                                            <a href="#" class="btn btn-xs cart-btn-danger btn-delete cart-left" data-id="@item.Product.id" ><i class="fa fa-remove"></i> Xoá </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                    <br /><br />
                    <section class="box-main1">
                        <div class="col-md-6 pull-left">
                            <button id="btnContinue" class="btn cart-btn-primary"><i class="fa fa-shopping-cart"></i> Tiếp tục mua hàng</button>
                            <button id="updatecart" class="btn btn-xs cart-btn-info cart-left" ><i class="fa fa-refresh"></i> Cập nhật </button>
                            <button id="btnDeleteAll" class="btn btn-xs cart-btn-danger cart-left" ><i class="fa fa-remove"></i> Xoá tất cả </button>
                            <button id="btnPayment" class="btn cart-btn-success cart-left" ><i class="fa fa-credit-card-alt"></i> Thanh toán</button>
                        </div>
                    </section>
                }
                else
                {
                    <section class="text-center">
                        <span class="alert alert-danger">Giỏ hàng hiện không có sản phẩm nào</span>
                    </section>
                }

            </div>
        </div>
    </div>
</div>