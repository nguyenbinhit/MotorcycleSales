
@{
    ViewBag.Title = "Đăng nhập / Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebXe.Models.MyViewModel

<!--login registration page title-->
<div class="bg-1" style="background-color: #fdf5e6;">
    <div class="container" style="padding: 80px 0px 40px 0px;">
        <div class="row text-center">
            <h3 class="login-registration-h3 text-center" style="color: red;"> ĐĂNG NHẬP / ĐĂNG KÝ THÀNH VIÊN </h3>
            <p> <img src="~/Assets/Client/images/moto/di.png" /></p>
        </div>
    </div>
</div>


<div class="bg-1 dual login-bg1">
    <!--from login-->
    <div class="container" style="margin-top: 0px">
        <h3 class="login-h3 text-center" style="color: #232323;">
            ĐĂNG NHẬP THÀNH VIÊN
        </h3>
        @using (Html.BeginForm("Login", "LoginClient", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal login-horizontal">
                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @if (ViewBag.Login != null)
                    {
                        <div class="alert alert-success">@ViewBag.Login</div>
                    }
                </div>
                <div class="form-group">
                    <label class="login-label">Tên đăng nhập:</label>
                    @Html.EditorFor(model => model.Login.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "nguyenbinh" } })
                    @Html.ValidationMessageFor(model => model.Login.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="login-label">Mật khẩu:</label>
                    @Html.PasswordFor(model => model.Login.PassWord, new { @class = "form-control width-dk", @placeholder = "*******" })
                    @Html.ValidationMessageFor(model => model.Login.PassWord, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Đăng nhập" class="btnn btn-info border-r mr-2" />
                    <a href="/LoginClient/LoginFacebook" class="btnfb btn-facebook border-r mr-2">
                        <i class="fa fa-facebook-square" id="fb"></i> Đăng nhập facebook 
                    </a>
                </div>
            </div>
        }
    </div>

    <!--From registration-->
    <div class="container login-from">
        <h3 class="regis-h3 text-center" style="color: #232323;">
            ĐĂNG KÝ THÀNH VIÊN
        </h3>
        @using (Html.BeginForm("Registered", "LoginClient", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal regis-horizontal">
                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }
                </div>
                <div class="form-group">
                    <label class="regis-label">Họ tên:</label>
                    @Html.EditorFor(model => model.Registered.DisplayName, new { htmlAttributes = new { @class = "form-control", @placeholder = "nguyenkhacbinh" } })
                    @Html.ValidationMessageFor(model => model.Registered.DisplayName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="regis-label">Tên đăng nhập:</label>
                    @Html.EditorFor(model => model.Registered.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "nguyenbinh" } })
                    @Html.ValidationMessageFor(model => model.Registered.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="regis-label">Mật khẩu:</label>
                    @Html.PasswordFor(model => model.Registered.PassWord, new { @class = "form-control width-dk", @placeholder = "*******" })
                    @Html.ValidationMessageFor(model => model.Registered.PassWord, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="regis-label">Nhập lại mật khẩu:</label>
                    @Html.PasswordFor(model => model.Registered.ConfirmPassword, new { @class = "form-control width-dk", @placeholder = "*******" })
                    @Html.ValidationMessageFor(model => model.Registered.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="regis-label">Số điện thoại:</label>
                    @Html.EditorFor(model => model.Registered.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "0334679170" } })
                    @Html.ValidationMessageFor(model => model.Registered.Phone, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="regis-label">Email:</label>
                    @Html.EditorFor(model => model.Registered.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "nguyenbinhit@gmail.com" } })
                    @Html.ValidationMessageFor(model => model.Registered.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Đăng ký" class="btnn btn-info border-r mr-2 text-center" style="width:105px" />
                </div>
            </div>
        }
    </div>
</div>

